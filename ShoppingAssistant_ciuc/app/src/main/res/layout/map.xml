<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="Back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/backFromMapToMain" />

    <Button
        android:text="Locate"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/geoLovate"
        android:onClick="gLocate"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/backFromMapToMain"
        android:layout_toEndOf="@+id/backFromMapToMain" />

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapView"
        android:layout_below="@+id/backFromMapToMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>